<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quizActivity2">

    <LinearLayout
        android:id="@+id/layoutQ2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButQ2"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:text="Back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Two balls of different masses are dropped in a vacuum from the same height. Which ball hits the ground first?"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bigBall"
                android:layout_width="180dp"
                android:layout_height="149dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="0dp"
                app:srcCompat="@android:drawable/ic_notification_overlay" />

            <ImageView
                android:id="@+id/smallBall"
                android:layout_width="71dp"
                android:layout_height="72dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@android:drawable/ic_notification_overlay" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/choices"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:gravity="center|center_vertical">

            <RadioButton
                android:id="@+id/answer1"
                android:layout_width="236dp"
                android:layout_height="48dp"
                android:text="Big ball" />

            <RadioButton
                android:id="@+id/answer2"
                android:layout_width="234dp"
                android:layout_height="50dp"
                android:text="Small ball" />

            <RadioButton
                android:id="@+id/answer3"
                android:layout_width="234dp"
                android:layout_height="70dp"
                android:text="Both land at the same time" />

        </RadioGroup>

        <Button
            android:id="@+id/submitQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:gravity="center"
            android:text="Submit"
            android:onClick="go"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center"
            android:textSize="24sp"
            tools:gravity="top" />

    </LinearLayout>

</RelativeLayout>